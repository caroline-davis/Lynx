{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@lynx-js/react",
    "allowImportingTsExtensions": true, // need this for tsx
    "noEmit": true, // need this for tsx

    "module": "node18",
    "moduleResolution": "node16",

    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["dist/"]
}
